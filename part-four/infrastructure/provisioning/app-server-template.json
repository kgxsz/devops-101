{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description" : "devops-part-four, app-server",

  "Parameters" : {
    "SubnetId" : { "Type" : "String" },
    "SecurityGroupId" : { "Type" : "String" },
    "BuildNumber" : { "Type" : "String" }
  },

  "Resources" : {

    "EIPAppServer" : {
      "Type" : "AWS::EC2::EIP",
      "Properties" : {
        "InstanceId" : { "Ref" : "EC2InstanceAppServer" }
      }
    },

    "EC2InstanceAppServer" : {
      "Type" : "AWS::EC2::Instance",
      "Properties" : {
        "ImageId" : "ami-25865252",
        "InstanceType" : "m1.small",
        "KeyName" : "main",
        "SubnetId" : { "Ref" : "SubnetId" },
        "SecurityGroupIds" : [ { "Ref" : "SecurityGroupId" } ],
        "Tags" : [ { "Key" : "Name", "Value" : { "Fn::Join" : ["", ["App Server - Build ", { "Ref" : "BuildNumber" } ] ] } } ],
        "IamInstanceProfile" : { "Ref" : "InstanceProfileForAppServer" },
        "UserData" : { "Fn::Base64" : { "Fn::Join" : [ "", [
          "#!/bin/sh -v \n",
          "apt-get update \n",
          "apt-get upgrade -y \n",
          "apt-get install openjdk-7-jdk -y \n",
          "apt-get install python-pip -y \n",
          "pip install awscli \n",
          "aws s3 cp s3://devops-part-four/ /tmp/ --recursive --exclude \"*\" --include \"application-*build:", { "Ref" : "BuildNumber" }, "-standalone.jar\" \n",
          "java -jar /tmp/application-*build:*-standalone.jar"
		    ]]}}
      }
    },

    "InstanceProfileForAppServer": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [ { "Ref": "RoleForAppServer" } ]
      }
    },

    "RoleForAppServer" : {
      "Type" : "AWS::IAM::Role",
      "Properties" : {
        "AssumeRolePolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [ {
            "Effect" : "Allow",
            "Principal" : { "Service" : [ "ec2.amazonaws.com" ] },
            "Action" : [ "sts:AssumeRole" ]
          } ]
        },
        "Path" : "/"
      }
    },

    "PolicyForS3ReadAccess": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "S3ReadAccess",
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [ { "Effect": "Allow", "Action": [ "s3:Get*", "s3:List*" ], "Resource": "*" } ]
        },
        "Roles": [ { "Ref": "RoleForAppServer" } ]
      }
    }
  }
}
